<Window x:Class="ClientKursBus2.Views.AddEditRace"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientKursBus2.Views"
        mc:Ignorable="d"
        Background="#333"
        Title="Добавление рейса" Height="590" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <!--//
            <ComboBox x:Name="NumberFlightsComboBox" Margin="10"
                DisplayMemberPath="NumberFlight" SelectedValuePath="NumberFlight"
                SelectedValue="{Binding NumberFlight}" />-->
        </Grid.RowDefinitions>
        <StackPanel Margin="0 5" Grid.Row="0">
            <Label Content="Введите номер Маршрута" Margin="20 0" Foreground="White"/>
            <TextBox x:Name="TripNum" Text="{Binding TripId}" Margin="20 0"/>
        </StackPanel>
        <StackPanel Margin="0 5" Grid.Row="1">
            <Label Content="Введите Колличесвто Мест" Margin="20 0" Foreground="White"/>
            <TextBox x:Name="Spots" Text="{Binding Pass}" Grid.Row="1" Margin="20 15"/>
        </StackPanel>
        <StackPanel Margin="0 5" Grid.Row="2">
            <Label Content="Введите Колличество Купленных Билетов" Margin="20 0" Foreground="White"/>
            <TextBox x:Name="Ticket" Text="{Binding Load}" Grid.Row="2" Margin="20 15"/>
        </StackPanel>
        <StackPanel Margin="0 5" Grid.Row="3">
            <Label Content="Введите Расход Топлива" Margin="20 0" Foreground="White"/>
            <TextBox x:Name="Benzin" Text="{Binding Circulation}" Grid.Row="3" Margin="20 15"/>
        </StackPanel>
        <StackPanel Margin="0 5" Grid.Row="4">
            <Label Content="Введите Прибыль" Margin="20 0" Foreground="White"/>
            <TextBox x:Name="Profit" Text="{Binding Profit}" Grid.Row="4" Margin="20 15"/>
        </StackPanel>
        <Grid Grid.Row="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Content="OK" Grid.Column="0" Margin="20 10" Height="50" Click="Button_Click"
                    Style="{StaticResource DialogStyle}"/>
            <Button Content="Cancel" Grid.Column="1" Margin="20 10" Height="50" Click="Button_Click_1"
                    Style="{StaticResource DialogStyle}"/>
        </Grid>
    </Grid>
</Window>
