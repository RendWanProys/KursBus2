<Window x:Class="ClientKursBus2.Views.AddEditSchedule"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientKursBus2.Views"
        mc:Ignorable="d"
        Background="#333"
        Title="Добавление Рассписания" Height="590" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <StackPanel Margin="0 5 0 5" Grid.Row="0">
            <Label Content="Введите Номер Маршрута" Margin="20 0" Foreground="White"/>
            <TextBox  Text="{Binding TripNum}" Margin="20 15"/>
        </StackPanel>
        
        <StackPanel Margin="0 5 0 5" Grid.Row="1">
            <Label Content="Введите Время отправления" Margin="20 0" Foreground="White"/>
            <TextBox  Text="{Binding ScheduleTime}" Grid.Row="1" Margin="20 15">
                <TextBox.ToolTip>
                    <ToolTip Content="Формат: ЧЧ:мм (08:00, 14:30)"/>
                </TextBox.ToolTip>
            </TextBox>
        </StackPanel>
        
        <StackPanel Margin="0 5 0 5" Grid.Row="2">
            <Label Content="Введите Пассажиропоток Людей В День" Margin="20 0" Foreground="White"/>
            <TextBox  Text="{Binding PassTraf}" Grid.Row="2" Margin="20 15"/>
        </StackPanel>
        
        <StackPanel Margin="0 5" Grid.Row="3">
            <Label Content="Введите Загруженность маршрута" Margin="20 0" Foreground="White"/>
            <ComboBox 
                SelectedValue="{Binding PeakLoad}"
                SelectedValuePath="Content"
                Margin="20 15">
                <ComboBoxItem Content="Низкая"/>
                <ComboBoxItem Content="Средняя"/>
                <ComboBoxItem Content="Высокая"/>
                <ComboBoxItem Content="Очень Высокая"/>
            </ComboBox>
        </StackPanel>
        
        <StackPanel Margin="0 5" Grid.Row="4">
            <Label Content="Введите Цену билета" Margin="20 0" Foreground="White"/>
            <TextBox  Text="{Binding Price}" Grid.Row="4" Margin="20 15"/>
        </StackPanel>
        
        <Grid Grid.Row="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            
            <Button Content="Сохранить" Grid.Column="0" Margin="20 10" Height="50" Click="Button_Click"
                    Style="{StaticResource DialogStyle}"/>
            <Button Content="Отмена" Grid.Column="1" Margin="20 10" Height="50" Click="Button_Click_1"
                    Style="{StaticResource DialogStyle}"/>
        </Grid>
    </Grid>
</Window>
