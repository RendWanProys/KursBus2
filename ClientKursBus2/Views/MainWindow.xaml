<Window x:Class="ClientKursBus2.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientKursBus2.Views"
        xmlns:vm="clr-namespace:ClientKursBus2.ViewModels"
        xmlns:Menu="clr-namespace:ClientKursBus2.Utills"
        mc:Ignorable="d"
        Title="Главное окно" Height="500" Width="900"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="Transparent">
    <Window.DataContext>
        <vm:NavigationViewModel/>
    </Window.DataContext>
    <Grid>
        <Border Background="#212529" CornerRadius="20" />
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="228" />
                <ColumnDefinition Width="622" />
            </Grid.ColumnDefinitions>
            <Grid HorizontalAlignment="Left" Width="228">
                <Border Background="#272B2F"
                        CornerRadius="20,0,0,20" />
                <StackPanel Height="400"
                            Width="228">
                    <!--// Home //-->
                    <Menu:Btn Style="{StaticResource BtnStyle}"
                              Command="{Binding HomeCommand}"
                              IsChecked="True">
                        <Grid>
                            <Image Source="/Assets/img_home.png"
                                   Style="{StaticResource Image_Style}" />
                            <TextBlock Text="Домой"
                                       Style="{StaticResource Text_Style}" />
                        </Grid>
                    </Menu:Btn>
                    <!--// Schedule //-->
                    <Menu:Btn Style="{StaticResource BtnStyle}"
                              Command="{Binding ScheduleCommand}"
                              IsChecked="True">
                        <Grid>
                            <Image Source="/Assets/Schedule.png"
                                   Style="{StaticResource Image_Style}" />
                            <TextBlock Text="Маршрутный Лист"
                                       Style="{StaticResource Text_Style}" />
                        </Grid>
                    </Menu:Btn>
                    <!--// Race //-->
                    <Menu:Btn Style="{StaticResource BtnStyle}"
              Command="{Binding RaceCommand}"
              IsChecked="False">
                        <Grid>
                            <Image Source="/Assets/Bus.png"
                   Style="{StaticResource Image_Style}" />
                            <TextBlock Text="Рейсы"
                       Style="{StaticResource Text_Style}" />
                        </Grid>
                    </Menu:Btn>
                </StackPanel>
            </Grid>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="67*"/>
                    <RowDefinition Height="58*"/>
                </Grid.RowDefinitions>

                <ContentControl x:Name="Pages"
                         Content="{Binding CurrentView}" Grid.RowSpan="2" />

            </Grid>
        </Grid>

        <Button x:Name="CloseApp"
                Style="{StaticResource ExitApp}" Click="CloseApp_Click"/>
    </Grid>
</Window>
